{
  "manifest_version": 3,
  "name": "Obscura",
  "version": "1.0",
  "description": "Автозаполнение и сохранение паролей",
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/Tektur-VariableFont_wdth,wght.ttf",
        "fonts/Roboto-VariableFont_wdth,wght.ttf"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}